<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= page.title %> | Dashboard Educativo</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/countup.js/2.0.8/countUp.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-900 text-gray-100 overflow-hidden">
  <!-- Background -->
  <div class="fixed inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 opacity-80"></div>
    <div class="absolute inset-0 backdrop-blur-sm"></div>
  </div>

  <!-- Flex container para Sidebar y Contenido Principal -->
  <div class="flex h-screen overflow-hidden relative z-10">
    <!-- Sidebar -->
    <aside class="h-full w-64 bg-gray-800 bg-opacity-50 backdrop-blur-md border-r border-gray-700 transition-all duration-300 ease-in-out">
      <div class="p-4 border-b border-gray-700">
        <h1 class="text-xl font-bold text-indigo-400">EduGame Dashboard</h1>
        <p class="text-sm text-gray-400 mt-1">Monitoreo de aprendizaje</p>
      </div>
      <nav class="py-4">
        <ul class="space-y-1 px-3">
          <li>
            <a href="/" class="flex items-center py-3 px-4 rounded-lg text-sm font-medium bg-indigo-900 bg-opacity-50 border border-indigo-700 transition-colors">
              <svg class="w-5 h-5 mr-3 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              Dashboard
            </a>
          </li>
          <li>
            <a href="/users" class="flex items-center py-3 px-4 rounded-lg text-sm font-medium text-gray-400 hover:bg-gray-700 hover:text-white transition-colors">
              <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
              Usuarios
            </a>
          </li>
          <li>
            <a href="/courses" class="flex items-center py-3 px-4 rounded-lg text-sm font-medium text-gray-400 hover:bg-gray-700 hover:text-white transition-colors">
              <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
              Cursos
            </a>
          </li>
          <li>
            <a href="/map" class="flex items-center py-3 px-4 rounded-lg text-sm font-medium text-gray-400 hover:bg-gray-700 hover:text-white transition-colors">
              <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Mapa Global
            </a>
          </li>
          <li class="py-2">
            <div class="border-t border-gray-700"></div>
          </li>
          <li>
            <a href="#" class="flex items-center py-3 px-4 rounded-lg text-sm font-medium text-gray-400 hover:bg-gray-700 hover:text-white transition-colors">
              <svg class="w-5 h-5 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c-.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Configuración
            </a>
          </li>
        </ul>
      </nav>
      <div class="absolute bottom-0 w-full p-4 border-t border-gray-700">
        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <div class="w-8 h-8 rounded-full bg-indigo-500 flex items-center justify-center text-white font-bold">
              A
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-white">Admin</p>
              <p class="text-xs text-gray-400">Administrador</p>
            </div>
          </div>
          <button class="text-gray-400 hover:text-white transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
            </svg>
          </button>
        </div>
      </div>
    </aside>

    <!-- Contenido Principal -->
    <main class="flex-1 overflow-y-auto">
      <!-- Header -->
      <header class="bg-gray-800 bg-opacity-50 backdrop-blur-md border-b border-gray-700 py-4 px-6">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-semibold text-white"><%= page.title %></h2>
          <div class="flex items-center space-x-4">
            <!-- Búsqueda -->
            <div class="relative">
              <input type="text" placeholder="Buscar..." class="py-1.5 pl-8 pr-4 bg-gray-700 text-white rounded-lg border border-gray-600 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 w-48 text-sm">
              <svg class="w-4 h-4 text-gray-400 absolute left-2.5 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <!-- Iconos de acción -->
            <button class="p-1.5 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors">
              <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
              </svg>
            </button>
            <button class="p-1.5 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors">
              <svg class="w-5 h-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
              </svg>
            </button>
            <div class="flex items-center pl-3 border-l border-gray-700">
              <div class="relative">
                <button class="flex items-center space-x-2">
                  <span class="inline-block h-8 w-8 rounded-full overflow-hidden bg-indigo-600">
                    <img src="https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-1.2.1&auto=format&fit=crop&w=80&q=80" alt="Avatar">
                  </span>
                  <span class="text-sm font-medium text-gray-300">Admin</span>
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Contenido del Dashboard -->
      <div class="p-6">
        <!-- Cards Resumen -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-6 animate__animated animate__fadeIn">
          <!-- Total de Usuarios -->
          <div class="bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 transform transition-all hover:scale-105">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">Usuarios Totales</p>
                <h3 class="text-3xl font-bold text-white mt-1" id="totalUsers"><%= userStats.totalUsers.toLocaleString() %></h3>
                <div class="flex items-center mt-2">
                  <span class="text-green-400 text-xs font-medium flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
                    </svg>
                    <%= userStats.userGrowth %>%
                  </span>
                  <span class="text-gray-500 text-xs ml-2">vs. mes pasado</span>
                </div>
              </div>
              <div class="bg-indigo-500 bg-opacity-20 p-3 rounded-lg">
                <svg class="w-8 h-8 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
          </div>
          <!-- Usuarios Activos -->
          <div class="bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 transform transition-all hover:scale-105">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">Usuarios Activos</p>
                <h3 class="text-3xl font-bold text-white mt-1" id="activeUsers"><%= userStats.activeUsers.toLocaleString() %></h3>
                <div class="flex items-center mt-2">
                  <span class="text-purple-400 text-xs font-medium">
                    <%= Math.round(userStats.activeUsers / userStats.totalUsers * 100) %>% de usuarios
                  </span>
                </div>
              </div>
              <div class="bg-purple-500 bg-opacity-20 p-3 rounded-lg">
                <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>
          <!-- Tasa de Finalización -->
          <div class="bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 transform transition-all hover:scale-105">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">Tasa de Finalización</p>
                <h3 class="text-3xl font-bold text-white mt-1" id="completionRate"><%= userStats.completionRate %>%</h3>
                <div class="flex items-center mt-2">
                  <div class="bg-gray-700 h-1.5 w-24 rounded-full overflow-hidden">
                    <div class="bg-green-400 h-full rounded-full" style="width: <%= userStats.completionRate %>%"></div>
                  </div>
                </div>
              </div>
              <div class="bg-green-500 bg-opacity-20 p-3 rounded-lg">
                <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>
          <!-- Tiempo Promedio de Sesión -->
          <div class="bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 transform transition-all hover:scale-105">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-gray-400 text-sm font-medium">Tiempo Promedio</p>
                <h3 class="text-3xl font-bold text-white mt-1" id="avgTime"><%= userStats.averageSessionTime %> min</h3>
                <div class="flex items-center mt-2">
                  <span class="text-blue-400 text-xs font-medium flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                    2.5%
                  </span>
                  <span class="text-gray-500 text-xs ml-2">vs. mes pasado</span>
                </div>
              </div>
              <div class="bg-blue-500 bg-opacity-20 p-3 rounded-lg">
                <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>
        </div>

        <!-- Fila de Gráficos -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
          <!-- Gráfico: Distribución por Edades -->
          <div class="bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 animate__animated animate__fadeIn">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white">Distribución por Edades</h3>
              <div class="flex space-x-2">
                <button class="text-xs py-1 px-2 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors text-gray-300">Todos</button>
                <button class="text-xs py-1 px-2 bg-indigo-600 rounded-lg text-white">Este Año</button>
                <button class="text-xs py-1 px-2 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors text-gray-300">Mes</button>
              </div>
            </div>
            <div class="h-64" id="ageDistributionChart"></div>
          </div>
          <!-- Gráfico: Progreso de Cursos -->
          <div class="bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 animate__animated animate__fadeIn">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white">Progreso de Cursos</h3>
              <button class="text-xs py-1 px-2 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors text-gray-300 flex items-center">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                </svg>
                Filtrar
              </button>
            </div>
            <div class="h-64" id="completionProgressChart"></div>
          </div>
        </div>

        <!-- Fila: Mapa Global y Actividades Recientes -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
          <!-- Mapa Global -->
          <div class="lg:col-span-2 bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 animate__animated animate__fadeIn">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white">Distribución Global</h3>
              <div class="text-xs text-gray-400">8 países activos</div>
            </div>
            <div class="h-80" id="worldMapContainer"></div>
          </div>
          <!-- Actividades Recientes -->
          <div class="bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 animate__animated animate__fadeIn">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-semibold text-white">Actividades Recientes</h3>
              <button class="text-xs py-1 px-2 bg-gray-700 rounded-full hover:bg-gray-600 transition-colors text-gray-300">
                Ver Todas
              </button>
            </div>
            <div class="space-y-4">
              <% if (recentActivities && recentActivities.length > 0) { %>
                <% recentActivities.forEach(activity => { %>
                  <div class="flex items-start">
                    <div class="bg-indigo-500 bg-opacity-20 p-2 rounded-lg">
                      <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-white"><%= activity.user %></p>
                      <p class="text-xs text-gray-400"><%= activity.activity %></p>
                      <div class="flex items-center mt-1">
                        <span class="text-xs text-gray-500"><%= activity.time %></span>
                        <span class="ml-2 px-1.5 py-0.5 bg-indigo-900 bg-opacity-50 rounded text-xs text-indigo-300">
                          +<%= activity.points %> pts
                        </span>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="text-center text-gray-400 py-4">
                  No hay actividades recientes para mostrar
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- Sección: Logros Populares -->
        <div class="bg-gray-800 bg-opacity-50 backdrop-blur-md rounded-xl border border-gray-700 p-5 animate__animated animate__fadeIn">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-white">Logros Populares</h3>
            <button class="text-xs py-1 px-2 bg-gray-700 rounded-lg hover:bg-gray-600 transition-colors text-gray-300">
              Ver Todos
            </button>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% if (achievementData && achievementData.popularAchievements && achievementData.popularAchievements.length > 0) { %>
              <% achievementData.popularAchievements.forEach(achievement => { %>
                <div class="flex items-center p-3 bg-gray-700 bg-opacity-50 rounded-lg">
                  <div class="bg-indigo-500 bg-opacity-20 p-2 rounded-full">
                    <% if (achievement.icon === 'streak') { %>
                      <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                    <% } else if (achievement.icon === 'star') { %>
                      <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                      </svg>
                    <% } else if (achievement.icon === 'compass') { %>
                      <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1"></path>
                      </svg>
                    <% } else if (achievement.icon === 'calculator') { %>
                      <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                      </svg>
                    <% } else { %>
                      <svg class="w-5 h-5 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                      </svg>
                    <% } %>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-white"><%= achievement.name %></p>
                    <p class="text-xs text-gray-400"><%= achievement.users.toLocaleString() %> usuarios</p>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <div class="col-span-2 text-center text-gray-400 py-4">
                No hay logros populares para mostrar
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </main>
  </div>

  <!-- JavaScript para Charts y Funcionalidades -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Inicializar contador animado para estadísticas
      const countUpOptions = {
        duration: 2,
        useEasing: true
      };

      // Aseguramos que los valores sean numéricos para CountUp
      const totalUsers = parseInt('<%= userStats.totalUsers || 0 %>', 10);
      const activeUsers = parseInt('<%= userStats.activeUsers || 0 %>', 10);
      const completionRate = parseFloat('<%= userStats.completionRate || 0 %>');
      const avgTime = parseFloat('<%= userStats.averageSessionTime || 0 %>');
      
      new CountUp('totalUsers', 0, totalUsers, 0, 2, countUpOptions).start();
      new CountUp('activeUsers', 0, activeUsers, 0, 2, countUpOptions).start();
      new CountUp('completionRate', 0, completionRate, 1, 2, countUpOptions).start();
      new CountUp('avgTime', 0, avgTime, 1, 2, countUpOptions).start();

      // Configuración para ApexCharts

      // Gráfico de distribución por edades
      const ageDistributionOptions = {
        series: [{
          name: 'Usuarios',
          data: [<%= (ageDistribution && ageDistribution.length) ? ageDistribution.map(age => age.count).join(',') : '0' %>]
        }],
        chart: {
          type: 'bar',
          height: 250,
          fontFamily: 'Inter, sans-serif',
          toolbar: { show: false },
          background: 'transparent'
        },
        colors: ['#818CF8', '#A5B4FC', '#C7D2FE', '#818CF8', '#A5B4FC'],
        plotOptions: {
          bar: {
            distributed: true,
            borderRadius: 4,
            horizontal: false,
            columnWidth: '60%'
          }
        },
        dataLabels: { enabled: false },
        legend: { show: false },
        xaxis: {
          categories: [<%= (ageDistribution && ageDistribution.length) ? ageDistribution.map(age => `'${age.range}'`).join(',') : "'-'" %>],
          labels: {
            style: { colors: '#9CA3AF', fontSize: '12px' }
          },
          axisBorder: { show: false },
          axisTicks: { show: false }
        },
        yaxis: {
          labels: {
            style: { colors: '#9CA3AF', fontSize: '12px' },
            formatter: val => val.toLocaleString()
          }
        },
        grid: {
          borderColor: 'rgba(107, 114, 128, 0.1)',
          strokeDashArray: 5,
          padding: { top: 0, right: 0, bottom: 0, left: 10 }
        },
        tooltip: {
          theme: 'dark',
          x: { show: false },
          y: { formatter: val => val.toLocaleString() + ' usuarios' }
        }
      };

      const ageDistributionChart = new ApexCharts(document.getElementById('ageDistributionChart'), ageDistributionOptions);
      ageDistributionChart.render();

      // Gráfico de progreso de cursos
      const completionProgressOptions = {
        series: [{
          name: 'Matemáticas',
          data: [65, 70, 72, 78, 82, 85, 90]
        }, {
          name: 'Ciencias',
          data: [58, 60, 65, 70, 73, 78, 80]
        }],
        chart: {
          height: 250,
          type: 'line',
          fontFamily: 'Inter, sans-serif',
          toolbar: { show: false },
          background: 'transparent'
        },
        colors: ['#6366F1', '#34D399'],
        stroke: { curve: 'smooth', width: 3 },
        grid: {
          borderColor: 'rgba(107, 114, 128, 0.1)',
          strokeDashArray: 5,
          padding: { top: 0, right: 0, bottom: 0, left: 10 }
        },
        xaxis: {
          categories: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio'],
          labels: { style: { colors: '#9CA3AF', fontSize: '12px' } },
          axisBorder: { show: false },
          axisTicks: { show: false }
        },
        yaxis: {
          labels: { style: { colors: '#9CA3AF', fontSize: '12px' } },
          min: 0,
          max: 100,
          tickAmount: 5
        },
        legend: {
          position: 'top',
          horizontalAlign: 'right',
          labels: { colors: '#9CA3AF' }
        },
        markers: { size: 5, strokeWidth: 0, hover: { size: 7 } },
        tooltip: { theme: 'dark', y: { formatter: val => val + '% completado' } }
      };

      const completionProgressChart = new ApexCharts(document.getElementById('completionProgressChart'), completionProgressOptions);
      completionProgressChart.render();

      // Mapa mundial simulado
      const worldMapContainer = document.getElementById('worldMapContainer');
      const mapContent = document.createElement('div');
      mapContent.classList.add('relative', 'h-full', 'w-full', 'flex', 'items-center', 'justify-center');

      const countries = [];
      <% if (countryStats && countryStats.length > 0) { %>
        <% countryStats.forEach(function(country) { %>
          countries.push({
            name: "<%= country.country %>",
            users: <%= country.users %>,
            completion: <%= country.completion %>,
            growth: <%= country.growth %>,
            position: { x: Math.random() * 80 + 10, y: Math.random() * 80 + 10 }
          });
        <% }); %>
      <% } %>

      const mapInnerHTML = `
        <div class="absolute inset-0 opacity-20 rounded-lg overflow-hidden">
          <svg width="100%" height="100%" viewBox="0 0 100 100">
            <path d="M10,30 Q30,5 50,20 T90,30 Q70,55 50,50 T10,30" fill="rgba(99, 102, 241, 0.3)" />
            <path d="M20,70 Q40,50 60,60 T80,70 Q60,85 40,75 T20,70" fill="rgba(99, 102, 241, 0.2)" />
          </svg>
        </div>
        ${countries.map(country => {
          const size = Math.max(30, Math.min(70, (country.users / 1000) * 10 + 30));
          return `
            <div class="absolute rounded-full bg-indigo-500" 
                 style="width: ${size}px; height: ${size}px; left: ${country.position.x}%; top: ${country.position.y}%">
              <div class="absolute w-full text-center -mt-6 text-xs text-white font-medium">
                ${country.name}
              </div>
              <div class="absolute inset-0 flex items-center justify-center text-xs text-white">
                ${country.users.toLocaleString()}
              </div>
            </div>
          `;
        }).join('')}
      `;

      mapContent.innerHTML = mapInnerHTML;
      worldMapContainer.appendChild(mapContent);
    });
  </script>
</body>
</html>
