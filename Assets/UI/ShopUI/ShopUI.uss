    color: rgb(255, 255, 255);
}

.skin {
    justify-content: center;
    align-self: auto;
    height: 70%;
    background-size: 70% 70%;
}

.buyableSkinContainer {
    background-image: url("project://database/Assets/NewUI.psd?fileID=-8177893096301847432&guid=88580963f0bc34a4993c39e31de83996&type=3#Container_03");
    background-size: 85% 75%;
}

.skin_text {
    position: absolute;
    font-size: 40px;
    color: rgb(237, 99, 53);
    -unity-font-definition: url("project://database/Assets/Fonts/PressStart2P-Regular.ttf?fileID=12800000&guid=2eeec31d665c5ed46b90940027895e85&type=3#PressStart2P-Regular");
    margin-top: 67px;
    margin-left: 104px;
    -unity-text-outline-width: 1px;
    -unity-text-outline-color: rgb(255, 210, 216);
}
